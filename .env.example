# Frontend environment variables
VITE_API_ENDPOINT=/.netlify/functions
VITE_AWS_REGION=us-east-1

# Backend environment variables (for local development)
# Note: Use MY_AWS_* prefix to avoid Netlify reserved variables
MY_AWS_ACCESS_KEY_ID=your-aws-access-key
MY_AWS_SECRET_ACCESS_KEY=your-aws-secret-key
MY_AWS_REGION=us-east-1

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Anthropic API
ANTHROPIC_API_KEY=your-anthropic-api-key

# DynamoDB table name
DYNAMODB_TABLE_NAME=claude-review-usage

# Node environment
NODE_ENV=development